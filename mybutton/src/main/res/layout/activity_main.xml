<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.example.mybutton.MainActivity.">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
    >

        <TextView
            android:id="@+id/tv_ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_account"/>
        <EditText
            android:id="@+id/ed_ac"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal"
    >

        <TextView
            android:id="@+id/tv_ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_passwd"/>
        <EditText
            android:id="@+id/ed_passwd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_sub"
        style="@style/common_button_style"
        android:text="@string/bt_sub"
    />

    <Button
        android:id="@+id/btn"
        style="@style/common_button_style_one"
        android:background="@drawable/but_shape"
        android:text="按钮" />

    <Button
        style="@style/common_button_style_two"
        android:text="按钮" />

    <Button
        style="@style/common_button_style_thr"
        android:text="按钮" />

</LinearLayout>
