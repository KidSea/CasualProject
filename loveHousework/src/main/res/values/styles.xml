<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ListView_Text" parent="AppTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/pink_main</item>
    </style>

    <style name="ButtonText_nopadding" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonText" parent="ButtonText_nopadding">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="AnimationFade_top">

        <!-- PopupWindow_top上下弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/in_toptobottom</item>
        <item name="android:windowExitAnimation">@anim/out_bottomtotop</item>
    </style>

    <style name="AnimationFade_bottom">

        <!-- PopupWindow_bottom上下弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>
    </style>

</resources>