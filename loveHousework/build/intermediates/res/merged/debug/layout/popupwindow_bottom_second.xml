<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/btn_main_state" >

    <Button
        android:id="@+id/btn_okdelete_second"
        style="@style/ButtonText_nopadding"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_main_state"
        android:text="@string/btn_okdelete_second_text" />

    <Button
        android:id="@+id/btn_okadd_second"
        style="@style/ButtonText_nopadding"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_main_state"
        android:text="@string/btn_okadd_second_text" />

</LinearLayout>