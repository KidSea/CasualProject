<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_main"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_deletedialogcustom_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pink_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_main_state" >

        <Button
            android:id="@+id/btn_cancle_deletedialogcustom_second"
            style="@style/ButtonText_nopadding"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_main_state"
            android:text="@string/btn_cancel_text" />

        <Button
            android:id="@+id/btn_ok_deletedialogcustom_second"
            style="@style/ButtonText_nopadding"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_main_state"
            android:text="@string/btn_ok_text" />
    </LinearLayout>

</LinearLayout>